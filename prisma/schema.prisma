generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model TagsModel {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  VideoModel   VideoModel? @relation(fields: [videoModelId], references: [id])
  videoModelId String?     @db.ObjectId
}

model UserModel {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  email         String   @unique
  password      String
  username      String   @unique
  avatarUrl     String
  subscribers   String[]
  subscribtions String[]
}

model VideoModel {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  downloadUrl String      @unique
  name        String
  tags        TagsModel[]
  uploadDate  DateTime    @default(now())
  userId      String
}

model AvatarModel {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  downloadUrl String   @unique
  uploadDate  DateTime @default(now())
  userId      String
}

model PostModel {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  desription String
  likes      BigInt
  comments   BigInt
  shares     BigInt
}
